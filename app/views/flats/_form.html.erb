<%= form_for @flat do |f| %>
  <%= f.label :name, "enter a name" %>
  <%= f.text_field :name %>
  <%= f.label :address, "enter an address" %>
  <%= f.text_field :address %>
  <%= f.label :description, "enter a description" %>
  <%= f.text_field :description %>
  <%= f.label :price_per_night, "enter a price_per_night" %>
  <%= f.text_field :price_per_night %>
  <%= f.label :number_of_guests, "enter a number_of_guests" %>
  <%= f.text_field :number_of_guests %>
  <%= f.submit %>
<% end %>
